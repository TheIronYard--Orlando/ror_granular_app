<h1><%= @restaurant.name %></h1>

<h2>Hours</h2>
 <table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Open</th>
      <th>Close</th>
    </tr>
  </thead>
  <tbody>

    <% @restaurant.hours.each do |day, hours| %>

      <tr>
        <td><%= day %></td>
        <td><%= hours["Open"] %></td>
        <td><%= hours["Closed"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to "Edit", edit_restaurant_path(@restaurant), id: 'edit_restaurant_link', remote: true %>
<%= link_to "Delete Restaurant", restaurant_path, method: :delete, data: {confirm: "Are you sure?"} %>

<div class="hidden">
    <%= render partial: 'form', locals: { submit_msg: "Update Restaurant", restaurant: @restaurant}  %>
</div>
