<h1><%= @restaurant.name %></h1>

<h2>Hours</h2>
<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Open</th>
      <th>Close</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurant.hours.each do |day| %>
      <tr>
        <td><%= day[0] %></td>
        <td><%= day[1]["Open"] %></td>
        <td><%= day[1]["Closed"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>