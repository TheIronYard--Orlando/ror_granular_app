<h1><%= @restaurant.name %></h1>

<h2>Hours</h2>
 <table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Open</th>
      <th>Close</th>
    </tr>
  </thead>
  <tbody>

    <% @restaurant.daily_schedules.each do |daily_schedules| %>

      <tr>
        <td><%= day %></td>
        <td><%= open %></td>
        <td><%= closed %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Edit Restaurant", edit_restaurant_path(@restaurant) %>
<%= link_to "Delete Restaurant", restaurant_path, method: :delete, data: {confirm: "Are you sure?"} %>
